@model IEnumerable<MiniCursos.Models.Disciplinas>

@{
    ViewBag.Title = "Index";
}

<div class="grid">
    <div>
        <h2>Lista de Disciplinas <a class="btn btn-success" href="#">Nova Displina</a></h2>
    </div>

    <div class="col-md-6">
        <h3 class="h3right">
            Total de Cursos: @ViewBag.qtdDisciplinas
        </h3>
    </div>
</div>



<div class="row">
    <table class="table">
        <thead>
            <tr>
                <td>ID</td>
                <td>Disciplinas</td>
                <td>Curso</td>
                <td>Carga Horária</td>
                <td>Opções</td>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in   Model)
            {
                <tr>
                    <td>@item.DISID</td>
                    <td>@item.DISDESCRIACAO</td>
                    <td>@item.CURSOID</td>
                    <td>@item.DISCH</td>

                    <td>
                        <a class="btn btn-primary" href="/Cursos/Exibir?id=@item.DISID">Exibir</a>
                        <a class="btn btn-warning" href="/Cursos/Editar?id=@item.DISID">Editar</a>
                        <a class="btn btn-danger" href="/Cursos/ExluirConfirmar?id=@item.DISID">Exluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


