@model IEnumerable<MiniCursos.Models.Cursos>

@{
    ViewBag.Title = "Index";
}



<div class="grid">
    <div>
        <h2>
            Lista de Cursos
            <a class="btn btn-success" href="/Cursos/Create">Novo</a>
        </h2>
    </div>

    <div class="col-md-6">
        <h3 class="h3right">
            Total de Cursos: @ViewBag.qtdCursos
        </h3>
        
    </div>
    
</div>

<div class="row">
    <table class="table">
        <thead>
            <tr>
                <td>
                    ID
                </td>
                <td>
                    Curso
                </td>
                <td>
                    Habilidade
                </td>
                <td>
                    Modalidade
                </td>
                <td>
                    Opções
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CURSOID</td>
                    <td>@item.CURSODESCRICAO</td>
                    <td>@item.CURSOCODHABILIDADE</td>
                    <td>@item.CURSOMODALIDADE</td>

                    <td>
                        <a class="btn btn-primary" href="/Cursos/Exibir?id=@item.CURSOID">Exibir</a>
                        <a class="btn btn-warning" href="/Cursos/Editar?id=@item.CURSOID">Editar</a>
                        <a class="btn btn-danger" href="/Cursos/Delete?id=@item.CURSOID">Exluir</a>
                    </td>
                </tr>
            }
        </tbody>


    </table>
</div>


